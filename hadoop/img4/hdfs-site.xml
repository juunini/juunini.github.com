<!-- Put site-specific property overrides in this file. -->

<configuration>
    <property>
        <name>dfs.replication</name>    <!-- 가상분산모드 -->
        <value>1</value>
    </property>

    <property>
        <name>dfs.namenode.name.dir</name>  <!-- 네임노드의 파일 지도 저장 경로 -->
        <value>/home/hadoop/data/dfs/namenode</value>
    </property>

    <property>
        <name>dfs.namenode.checkpoint.dir</name>    <!-- 보조네임노드의 파일 지도 저장 경로 -->
        <value>/home/hadoop/data/dfs/namesecondary</value>
    </property>

    <property>
        <name>dfs.datanode.data.dir</name>  <!-- 데이터노드가 파일을 쌓아두는 곳의 경로 -->
        <value>/home/hadoop/data/dfs/datanode</value>
    </property>

    <property>
        <name>dfs.http.address</name>   <!-- 모니터링 주소 -->
        <value>node1:50070</value>
    </property>

    <property>
        <name>dfs.secondary.http.address</name> <!-- 보조네임노드 모니터링 주소 -->
        <value>node1:50090</value>
    </property>

    <property>
        <name>dfs.blocksize</name>  <!-- 블록사이즈. 32MB로 설정했음. 32 * 1024 * 1024 -->
        <value>33554432</value>
    </property>
</configuration>
